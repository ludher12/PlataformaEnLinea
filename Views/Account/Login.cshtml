@model PlataformaEnLinea.ViewModels.LoginViewModel
@if (ViewBag.Error != null)
{

    <div class="alert alert-danger" role="alert">
        @ViewBag.Error
    </div>
}

<div class="container-fluid container-login">
    <h3 class="text-center">Bienvenido a CourseCraft</h3>
    <form asp-action="Login" method="post">
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="alert-danger"> </span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="alert-danger"> </span>
        </div>
        <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
    </form>
    <div class="mt-3">
        <p> No tienes cuenta? <a asp-action="Register" asp-controller="StudentAccount">Registrate aqui</a></p>
    </div>
</div>

<style>

    .container-login {

        background-color: white;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        width:400px;
        padding: 30px;
    }

    body {
        background-image: url('~/Images/logo.jpg');
        background-size: cover;
        justify-content: center;
        align-items: center;
    }

    .login-container img {
        width: 100px;
        display: block;
        margin: 0 auto 20px;
    }
</style>