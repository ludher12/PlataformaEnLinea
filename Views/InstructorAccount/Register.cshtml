@model PlataformaEnLinea.ViewModels.RegisterViewModel
@if (ViewBag.Error != null)
{

    <div class="alert alert-danger" role="alert">
        @ViewBag.Error
    </div>
}

<div class="container-fluid container-register">
    <h3 class="text-center">Registro de Instructor</h3>
    <form asp-action="Register" method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="alert-danger"> </span>
        </div>
        <div class="form-group">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="alert-danger"> </span>
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="alert-danger"> </span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="alert-danger"> </span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="alert-danger"> </span>
        </div>
        <button type="submit" class="btn btn-primary">Crear cuenta</button>
    </form>

    <div class="mt-3">
        <p> Ya tienes cuenta? <a asp-action="Login" asp-controller="Account">Inicia sesion aqui</a></p>
        <p> Quieres ser estudiante? <a asp-action="Register" asp-controller="StudentAccount">Registrate aqui</a></p>
    </div>
</div>

<style>

    .container-register {

        background-color: white;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        width:400px;
        padding: 30px;
    }
</style>